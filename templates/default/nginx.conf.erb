<% if @secure %>
server {
  <% if @listen_ipv6 %>
  listen [::]:80<% if @default_server %> default_server<% end %>;
  <% end %>
  listen 80<% if @default_server %> default_server<% end %>;

  server_name <%= @fqdn %>;

  location / {
    return 301 https://$server_name$request_uri;
  }
}
<% end %>

server {
  <% if @secure %>
  <% if @listen_ipv6 %>
  listen [::]:443 ssl http2<% if @default_server %> default_server<% end %>;
  <% end %>
  listen 443 ssl http2<% if @default_server %> default_server<% end %>;
  <% else %>
  <% if @listen_ipv6 %>
  listen [::]:80<% if @default_server %> default_server<% end %>;
  <% end %>
  listen 80<% if @default_server %> default_server<% end %>;
  <% end %>

  server_name <%= @fqdn %>;

  <% if @access_log_options == 'off' %>
  access_log off;
  <% else %>
  access_log <%= @access_log %><% unless @access_log_options.empty? %> <%= @access_log_options %><% end %>;
  <% end %>
  error_log <%= @error_log %><% unless @error_log_options.empty? %> <%= @error_log_options %><% end %>;

  <% if @secure %>
  <% if @scts %>
  ssl_ct on;
  <% end %>

  ssl_certificate <%= @ssl_rsa_certificate %>;
  ssl_certificate_key <%= @ssl_rsa_certificate_key %>;
  <% if @scts %>
  ssl_ct_static_scts <%= @scts_rsa_dir %>;
  <% end %>

  <% if @ec_certificates %>
  ssl_certificate <%= @ssl_ec_certificate %>;
  ssl_certificate_key <%= @ssl_ec_certificate_key %>;
  <% if @scts %>
  ssl_ct_static_scts <%= @scts_ec_dir %>;
  <% end %>
  <% end %>

  add_header Strict-Transport-Security 'max-age=<%= @hsts_max_age %>' always;

  <% if @oscp_stapling %>
  ssl_stapling on;
  ssl_stapling_verify on;
  resolver 8.8.8.8 8.8.4.4 valid=300s;
  resolver_timeout 5s;
  <% end %>
  <% end %>
  charset utf-8;

  location / {
    return <%= @permanent ? '301' : '302' %> http<%= @secure ? 's' : '' %>://<%= @target %><%= @pass_request_uri ? '$request_uri' : '' %>;
  }
}
